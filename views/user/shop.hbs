<!-- products -->
<div class="product-section mt-150 mb-150">
    <div class="container">

        <div class="row">
            <div class="col-md-12">
                <div class="product-filters">
                   
                    <ul>
                       <a href="/user/products"> <li data-filter="*">All</li></a>
                         <a href="/user/category/Boot"><li data-filter=".berry">Boots</li></a>
                        <a href="/user/category/Ball"><li data-filter=".lemon">Ball</li> </a>
                        <a href="/user/category/JERCY">
                            <li data-filter=".strawberry">Jercy</li>
                        </a>
                       
                    </ul>
                    
                </div>
            </div>
        </div>

        <div class="row product-lists">
            {{#each products}}
            <div class="col-lg-4 col-md-6 text-center strawberry">
                <div class="single-product-item">
                    <div class="product-image">
                        <a href="/user/product-details/{{this._id}}"><img src="{{this.images.[0]}}" style="width: 262px;height:262px;" alt=""></a>
                    </div>
                    <h3>{{this.name}}</h3>
                    {{#if this.currentOffer}}
                    <div class="bg-secondary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">
                        {{this.currentOffer}}% off</div>
                    {{else}}
                    <div class="bg-secondary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">
                        0% off</div>
                    {{/if}}
                    <p class="product-price"> <span><strike>₹ {{this.price}}</strike></span><strong>₹{{this.offerPrice}}</strong></p>


                {{#if this.stock}}
                {{#if users}}
                                <button class="boxed-btn" id="btn" onclick="addtocart('{{this._id}}')"><i class="fas fa-shopping-cart"></i> Add to
                                    Cart</button>
                 {{else}}
                <a href="/user/login" type="button"  class="cart-btn" id="addcrt"><i
                        class="fas fa-shopping-cart"></i> Add to Cart</a>
                {{/if}}
                {{else}}
                <a href="#" class="cart-btn"><i class="fas fa-shopping-cart"></i>Out of stock</a>
                {{/if}}
                <br><br>
					<a type="button" id="wish" class="shopping-cart" onclick="addToWishlist('{{this._id}}')" ><i   class="fa-regular fa-heart"style="margin-left:0px ;font-size: xx-large;"></i></a>

                </div>
            </div>
            {{/each}}
            
        </div>

        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="pagination-wrap">
                    <ul>
                        <li><a href="#">Prev</a></li>
                        <li><a href="#">1</a></li>
                        <li><a class="active" href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">Next</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
