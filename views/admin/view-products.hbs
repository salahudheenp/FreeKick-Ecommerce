<section>
  <div class="container mt-5 d-flex justify-content-end" style="margin-left:70px ;">
    <div class="row d-flex justify-content-end">
      {{!-- <a href="/admin/add-product  " class="btn btn-success  " style="width: 10rem;" >Add product</a> --}} --}}

    </div>
    <table class="table mt-5  table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Name</th>
          <th scope="col">Price</th>
          <th scope="col">Stock</th>
          <th scope="col">Category</th>
           <th scope="col">Image</th> 
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <th scope="row">{{@index}}</th>
          <td>{{this.name}}</td>
          <td>{{this.category}}</td>
          <td>{{this.stock}}</td>
          <td>{{this.price}}</td>
           <td><img style="width:50px ;height:50px;" src="{{this.images.[0]}}" alt=""></td> 
          <td>
            <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
             <a href="/admin/delete-product/{{this._id}}" onclick="return confirm('Are you want to delete{{this.Name}}?')" class="btn btn-danger">Delete</a>
          </td>
        {{/each}}  
       
      </tbody>
    </table>
  </div>

</section>