<section>
  <div class="container mt-4 " style="margin-left:400px ;">
    <div class="row">
      <div class="col-md-6">
        <h2 class="text-center">Add Products</h2>
        <form
          action="/admin/add-product"
          method="post"
          enctype="multipart/form-data"
        >
          <label for="">Name</label>
          <input type="text" id="name" name="name" class="form-control" />

          
            <label for="" style="margin-top:15px ;">category</label>
            <select id="inputState" class="form-select form-control" name="category" required>
              <option aria-placeholder="Choose category" selected></option>
              {{#each category}}
              <option>{{this.category}}</option>
              {{/each}}
            </select>
          <label for="">Price</label>
          <input type="text" id="price" name="price" class="form-control" required/>

          <label for="">Discription</label>
          <input type="text" id="discription" name="discription" class="form-control" required />

          <label for="">Stock</label>
          <input type="number" id="discription" name="stock" class="form-control" required />


          <label for="">Image</label>
          <input type="file" id="image" name="image1" class="form-control" multiple required/>


          <label for="">Image 2</label>
          <input type="file" id="image" name="image2" class="form-control" multiple required />

          <label for="">Image3</label>
          <input type="file" id="image" name="image3" class="form-control" multiple required />

          <label for="">Image4</label>
          <input type="file" id="image" name="image4" class="form-control" multiple required />

          <button type="submit" class="btn btn-success mt-4">Submit</button>
        </form>
      </div>
    </div>
  </div>
</section>